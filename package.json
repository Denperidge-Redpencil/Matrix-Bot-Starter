{
  "name": "mermatrix",
  "version": "1.0.0",
  "description": "A mermaid.js bot for Matrix!",
  "main": "app/index.ts",
  "dependencies": {
    "@mermaid-js/mermaid-cli": "^9.3.0",
    "dotenv": "^16.0.3",
    "matrix-bot-sdk": "^0.6.3"
  },
  "devDependencies": {
    "headless-mermaid": "^1.3.0",
    "mermaid": "^9.3.0",
    "svg2img": "^1.0.0-beta.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "start": "node build/index.js",
    "dev": "npx ts-node-dev --files app/index.ts",
    "build": "npx tsc",
    
    "start-docker": "docker run --userns=host --network=\"host\" mermatrix",
    "dev-docker": "npm run build-docker && npm run start-docker",
    "build-docker": "cp -n .env .env.docker && docker build -t mermatrix ."
  },
  "author": "Denperidge",
  "license": "MIT"
}
